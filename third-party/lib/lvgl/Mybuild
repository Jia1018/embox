package third_party.lib

@Build(stage=1,script="$(EXTERNAL_MAKE)")
@BuildArtifactPath(cppflags="-I$(abspath $(EXTERNAL_BUILD_DIR))/third_party/lib/lvgl/lvgl-7.10.0 -DLV_CONF_PATH=$(abspath $(CONF_DIR))/lvgl/lv_conf.h -I$(abspath $(ROOT_DIR))/third-party/lib/lvgl")
static module lvgl {
	@AddPrefix("^BUILD/extbld/third_party/lib/lvgl/install")
	source "liblvgl.a"
}

@BuildDepends(lvgl)
static module lvgl_display_port {
	option number log_level = 1

	source "display_port.c"
}

@BuildDepends(lvgl)
static module lvgl_input_dev_port {
	option number log_level = 1

	source "input_dev_port.c"
}
